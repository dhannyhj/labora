            const sidebar = document.getElementById('desktop-sidebar');
            sidebar.classList.toggle('collapsed');
        });

        // Global search functionality
        document.getElementById('global-search')?.addEventListener('input', function(e) {
            const query = e.target.value;
            if (query.length > 2) {
                // Implement search functionality
                console.log('Searching for:', query);
            }
        });

        // Enhanced Toast notification function with type validation and dark mode support
        function showToast(message, type = 'info', duration = 5000) {
            const container = document.getElementById('toast-container');
            if (!container) {
                console.warn('Toast container not found');
                return;
            }
            
            // Validate and normalize type
            const validTypes = ['success', 'error', 'warning', 'info'];
            const normalizedType = validTypes.includes(type) ? type : 'info';
            
            const toast = document.createElement('div');
            
            // Type-specific styling with dark mode support
            const typeConfig = {
                success: {
                    classes: 'labora-notification-success',
                    icon: 'fas fa-check-circle',
                    bgColor: 'bg-green-50 dark:bg-green-900',
                    textColor: 'text-green-800 dark:text-green-200',
                    borderColor: 'border-green-200 dark:border-green-700'
                },
                error: {
                    classes: 'labora-notification-error',
                    icon: 'fas fa-exclamation-circle', 
                    bgColor: 'bg-red-50 dark:bg-red-900',
                    textColor: 'text-red-800 dark:text-red-200',
                    borderColor: 'border-red-200 dark:border-red-700'
                },
                warning: {
                    classes: 'labora-notification-warning',
                    icon: 'fas fa-exclamation-triangle',
                    bgColor: 'bg-yellow-50 dark:bg-yellow-900', 
                    textColor: 'text-yellow-800 dark:text-yellow-200',
                    borderColor: 'border-yellow-200 dark:border-yellow-700'
                },
                info: {
                    classes: 'labora-notification-info',
                    icon: 'fas fa-info-circle',
                    bgColor: 'bg-blue-50 dark:bg-blue-900',
                    textColor: 'text-blue-800 dark:text-blue-200', 
                    borderColor: 'border-blue-200 dark:border-blue-700'
                }
            };
            
            const config = typeConfig[normalizedType];
            
            toast.className = `labora-notification ${config.classes} animate-slide-in-right pointer-events-auto`;
            toast.innerHTML = `
                <div class="p-4 flex items-center justify-between ${config.bgColor} ${config.borderColor} border-l-4 rounded-lg shadow-lg">
                    <div class="flex items-center space-x-3">
                        <i class="${config.icon} ${config.textColor}"></i>
                        <span class="text-sm font-medium ${config.textColor}">${message}</span>
                    </div>
                    <button type="button" 
                            class="text-gray-400 hover:text-gray-600 dark:text-gray-500 dark:hover:text-gray-300 ml-4 focus:outline-none focus:ring-2 focus:ring-gray-300 rounded" 
                            onclick="removeToast(this.closest('.labora-notification'))">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            `;
            
            container.appendChild(toast);
            
            // Auto-remove toast
            setTimeout(() => {
                removeToast(toast);
            }, duration);
        }
        
        // Helper function to remove toast with animation
        function removeToast(toast) {
            if (toast && toast.parentElement) {
                toast.style.transform = 'translateX(100%)';
                toast.style.opacity = '0';
                setTimeout(() => {
                    if (toast.parentElement) {
                        toast.remove();
                    }
                }, 300);
            }
        }

        // Loading overlay functions
        function showLoading() {
            document.getElementById('loading-overlay').classList.remove('hidden');
        }
        
        function hideLoading() {
            document.getElementById('loading-overlay').classList.add('hidden');
        }

        // Accessibility improvements
        document.addEventListener('keydown', function(e) {
            // ESC key to close mobile sidebar
            if (e.key === 'Escape') {
                const sidebar = document.getElementById('mobile-sidebar');
                const overlay = document.getElementById('mobile-sidebar-overlay');
                
                if (!sidebar.classList.contains('-translate-x-full')) {
                    sidebar.classList.add('-translate-x-full');
                    overlay.classList.add('hidden');
                }
            }
        });

        // Dark mode toggle functionality
        function toggleDarkMode() {
            const html = document.documentElement;
            const isDark = html.classList.contains('dark');
            
            if (isDark) {
                html.classList.remove('dark');
                localStorage.setItem('darkMode', 'false');
            } else {
                html.classList.add('dark');
                localStorage.setItem('darkMode', 'true');
            }
        }
        
        // Enhanced notification handling with type validation
        window.addEventListener('load', function() {
            {{#if notification}}
                // Validate notification type from server
                const serverType = '{{notification.type}}';
                const validTypes = ['success', 'error', 'warning', 'info'];
                const safeType = validTypes.includes(serverType) ? serverType : 'info';
                
                showToast('{{notification.message}}', safeType);
            {{/if}}
            
            // Add dark mode toggle button if not exists
            const headerNav = document.querySelector('.flex.items-center.space-x-4');
            if (headerNav && !document.getElementById('dark-mode-toggle')) {
                const darkModeBtn = document.createElement('button');
                darkModeBtn.id = 'dark-mode-toggle';
                darkModeBtn.type = 'button';
                darkModeBtn.className = 'p-2 text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-labora-500 rounded-lg';
                darkModeBtn.title = 'Toggle Dark Mode';
                darkModeBtn.onclick = toggleDarkMode;
                darkModeBtn.innerHTML = `
                    <i class="fas fa-moon dark:hidden"></i>
                    <i class="fas fa-sun hidden dark:block"></i>
                `;
                
                // Insert before notifications button
                const notificationsDiv = headerNav.querySelector('.relative');
                if (notificationsDiv) {
                    headerNav.insertBefore(darkModeBtn, notificationsDiv);
                }
            }
        });
    </script>

