<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}} - Labora Clinical Lab</title>
    <meta name="description" content="Sistem Manajemen Laboratorium Klinik Terpadu">
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/assets/images/labora-logo.png">
    
    <!-- CSS Framework - Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Icons - Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/assets/css/labora-theme.css">
    
    <!-- Additional page-specific CSS -->
    {{#if pageCSS}}
    <link rel="stylesheet" href="/assets/css/{{pageCSS}}">
    {{/if}}
</head>
<body class="labora-body">
    <!-- Header Component -->
    <header class="labora-header bg-primary text-white shadow-sm sticky-top">
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <!-- Brand/Logo -->
                <a class="navbar-brand d-flex align-items-center" href="/dashboard">
                    <img src="/assets/images/labora-logo.png" alt="Labora" width="32" height="32" class="me-2">
                    <span class="fw-bold">Labora</span>
                </a>

                <!-- Mobile Menu Toggle -->
                <button class="navbar-toggler d-lg-none" type="button" data-bs-toggle="collapse" data-bs-target="#mobileNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Header Navigation -->
                <div class="collapse navbar-collapse" id="headerNav">
                    <ul class="navbar-nav ms-auto me-3">
                        <!-- Notifications -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle position-relative" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-bell"></i>
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                    <span id="notificationCount">3</span>
                                </span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end notification-dropdown">
                                <li><h6 class="dropdown-header">Notifikasi</h6></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-test-tube text-warning me-2"></i>5 sampel siap diperiksa</a></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-file-earmark-check text-success me-2"></i>Laporan QC tersedia</a></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-exclamation-triangle text-danger me-2"></i>Reagent hampir habis</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-center" href="/notifications">Lihat Semua</a></li>
                            </ul>
                        </li>

                        <!-- Quick Actions -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-plus-circle"></i> Tambah
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/orders/new"><i class="bi bi-file-plus me-2"></i>Order Baru</a></li>
                                <li><a class="dropdown-item" href="/patients/new"><i class="bi bi-person-plus me-2"></i>Pasien Baru</a></li>
                                <li><a class="dropdown-item" href="/specimens/new"><i class="bi bi-droplet me-2"></i>Sample Baru</a></li>
                            </ul>
                        </li>

                        <!-- User Menu -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                                <img src="/assets/images/default-avatar.png" alt="User" width="24" height="24" class="rounded-circle me-1">
                                <span>{{user.name}}</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/profile"><i class="bi bi-person me-2"></i>Profil</a></li>
                                <li><a class="dropdown-item" href="/settings"><i class="bi bi-gear me-2"></i>Pengaturan</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/help"><i class="bi bi-question-circle me-2"></i>Bantuan</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" href="/logout"><i class="bi bi-box-arrow-right me-2"></i>Keluar</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="labora-container">
        <!-- Sidebar Component -->
        <aside class="labora-sidebar bg-light border-end">
            <div class="sidebar-header p-3 border-bottom">
                <h6 class="text-muted mb-0">Menu Utama</h6>
            </div>

            <nav class="sidebar-nav">
                <ul class="nav flex-column">
                    <!-- Dashboard -->
                    <li class="nav-item">
                        <a class="nav-link {{#ifEquals currentPage 'dashboard'}}active{{/ifEquals}}" href="/dashboard">
                            <i class="bi bi-speedometer2 me-2"></i>
                            Dashboard
                        </a>
                    </li>

                    <!-- Order Management -->
                    <li class="nav-item">
                        <a class="nav-link {{#ifEquals currentPage 'orders'}}active{{/ifEquals}}" href="/orders">
                            <i class="bi bi-file-earmark-text me-2"></i>
                            Manajemen Order
                        </a>
                    </li>

                    <!-- Patient Management -->
                    <li class="nav-item">
                        <a class="nav-link {{#ifEquals currentPage 'patients'}}active{{/ifEquals}}" href="/patients">
                            <i class="bi bi-people me-2"></i>
                            Data Pasien
                        </a>
                    </li>

                    <!-- Specimen Management -->
                    <li class="nav-item">
                        <a class="nav-link {{#ifEquals currentPage 'specimens'}}active{{/ifEquals}}" href="/specimens">
                            <i class="bi bi-droplet me-2"></i>
                            Manajemen Sampel
                        </a>
                    </li>

                    <!-- Test Management -->
                    <li class="nav-item">
                        <a class="nav-link {{#ifEquals currentPage 'tests'}}active{{/ifEquals}}" href="/tests">
                            <i class="bi bi-test-tube me-2"></i>
                            Pemeriksaan Lab
                        </a>
                    </li>

                    <!-- Results -->
                    <li class="nav-item">
                        <a class="nav-link {{#ifEquals currentPage 'results'}}active{{/ifEquals}}" href="/results">
                            <i class="bi bi-file-earmark-check me-2"></i>
                            Hasil Pemeriksaan
                        </a>
                    </li>

                    <!-- Reports -->
                    <li class="nav-item">
                        <a class="nav-link {{#ifEquals currentPage 'reports'}}active{{/ifEquals}}" href="/reports">
                            <i class="bi bi-graph-up me-2"></i>
                            Laporan
                        </a>
                    </li>

                    <!-- Separator -->
                    <li><hr class="dropdown-divider mx-3"></li>

                    <!-- Inventory -->
                    <li class="nav-item">
                        <a class="nav-link {{#ifEquals currentPage 'inventory'}}active{{/ifEquals}}" href="/inventory">
                            <i class="bi bi-box me-2"></i>
                            Inventori
                        </a>
                    </li>

                    <!-- Quality Control -->
                    <li class="nav-item">
                        <a class="nav-link {{#ifEquals currentPage 'qc'}}active{{/ifEquals}}" href="/quality-control">
                            <i class="bi bi-shield-check me-2"></i>
                            Quality Control
                        </a>
                    </li>

                    <!-- Administration -->
                    {{#if user.isAdmin}}
                    <li><hr class="dropdown-divider mx-3"></li>
                    <li class="nav-item">
                        <h6 class="nav-header text-muted px-3 py-2 small">ADMINISTRASI</h6>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{#ifEquals currentPage 'users'}}active{{/ifEquals}}" href="/admin/users">
                            <i class="bi bi-person-gear me-2"></i>
                            Pengguna
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{#ifEquals currentPage 'settings'}}active{{/ifEquals}}" href="/admin/settings">
                            <i class="bi bi-gear me-2"></i>
                            Pengaturan Sistem
                        </a>
                    </li>
                    {{/if}}
                </ul>
            </nav>

            <!-- Sidebar Footer -->
            <div class="sidebar-footer p-3 border-top">
                <div class="d-flex align-items-center">
                    <div class="status-indicator bg-success me-2"></div>
                    <small class="text-muted">Sistem Online</small>
                </div>
            </div>
        </aside>

        <!-- Main Content Area -->
        <main class="labora-main">
            <!-- Breadcrumb -->
            {{#if breadcrumb}}
            <nav aria-label="breadcrumb" class="labora-breadcrumb">
                <div class="container-fluid">
                    <ol class="breadcrumb mb-0 py-3">
                        {{#each breadcrumb}}
                        <li class="breadcrumb-item {{#if @last}}active{{/if}}">
                            {{#unless @last}}
                            <a href="{{url}}">{{name}}</a>
                            {{else}}
                            {{name}}
                            {{/unless}}
                        </li>
                        {{/each}}
                    </ol>
                </div>
            </nav>
            {{/if}}

            <!-- Page Content -->
            <div class="labora-content">
                {{{body}}}
            </div>
        </main>
    </div>

    <!-- Footer Component -->
    <footer class="labora-footer bg-light border-top mt-auto">
        <div class="container-fluid">
            <div class="row align-items-center py-3">
                <div class="col-md-6">
                    <span class="text-muted">&copy; 2024 Labora Clinical Lab System. All rights reserved.</span>
                </div>
                <div class="col-md-6 text-md-end">
                    <span class="text-muted me-3">Versi {{appVersion}}</span>
                    <a href="/help" class="text-decoration-none me-3">Bantuan</a>
                    <a href="/privacy" class="text-decoration-none me-3">Privasi</a>
                    <a href="/support" class="text-decoration-none">Dukungan</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Mobile Bottom Navigation (visible on mobile only) -->
    <nav class="mobile-bottom-nav d-lg-none bg-primary">
        <div class="d-flex">
            <a href="/dashboard" class="nav-item {{#ifEquals currentPage 'dashboard'}}active{{/ifEquals}}">
                <i class="bi bi-speedometer2"></i>
                <span>Dashboard</span>
            </a>
            <a href="/orders" class="nav-item {{#ifEquals currentPage 'orders'}}active{{/ifEquals}}">
                <i class="bi bi-file-earmark-text"></i>
                <span>Orders</span>
            </a>
            <a href="/patients" class="nav-item {{#ifEquals currentPage 'patients'}}active{{/ifEquals}}">
                <i class="bi bi-people"></i>
                <span>Pasien</span>
            </a>
            <a href="/results" class="nav-item {{#ifEquals currentPage 'results'}}active{{/ifEquals}}">
                <i class="bi bi-file-earmark-check"></i>
                <span>Hasil</span>
            </a>
            <a href="/reports" class="nav-item {{#ifEquals currentPage 'reports'}}active{{/ifEquals}}">
                <i class="bi bi-graph-up"></i>
                <span>Laporan</span>
            </a>
        </div>
    </nav>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/labora-core.js"></script>
    
    <!-- Page-specific scripts -->
    {{#if pageJS}}
    <script src="/assets/js/{{pageJS}}"></script>
    {{/if}}

    <!-- Additional scripts -->
    {{{scripts}}}
</body>
</html>